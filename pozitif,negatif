#include <stdio.h>
#include <stdlib.h>



int main() {
    int sayi;
    printf("Bir sayi girin: ");
    scanf("%d", &sayi);

    if (sayi > 0) {
        printf("Pozitif\n");
    }
    if (sayi < 0) {
        printf("Negatif\n");
    }
    if (sayi == 0) {
        printf("0\n");
    }

    return 0;
}
